<?xml version="1.0" encoding="UTF-8"?>
<scr:component xmlns:scr="http://www.osgi.org/xmlns/scr/v1.1.0" name="Logfile Writer for LogListener">
   <implementation class="edu.hu.clickwatch.logservice.FileLogWriter"/>
   <service>
      <provide interface="org.osgi.service.log.LogListener"/>
   </service>
   <reference bind="open" cardinality="1..1" interface="org.osgi.service.log.LogReaderService" name="LogReaderService" policy="static" unbind="stop"/>
</scr:component>
